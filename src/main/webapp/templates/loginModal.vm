<div class="modal fade" id="login-modal" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal"><span aria-hidden="true">&times;</span><span class="sr-only">Close</span></button>
                <h4 class="modal-title" id="loginModalLabel">Login</h4>
            </div>
            <div class="modal-body">
                <form method="POST" id="login-form">
                    <div class="form-group ">
                        <input type="text" id="inputEmail" name="email" value="" class="form-control input-lg" autocomplete="off" placeholder="Email">
                        <span class="help-block"></span>
                    </div>
                    <div class="form-group ">
                        <input type="password" id="inputPassword" name="password" class="form-control input-lg" autocomplete="off" placeholder="Password">
                        <span class="help-block"></span>
                    </div>

                    <div class="login alert alert-danger" role="alert" style="display:none;"><strong>Error: </strong>Invalid email/password combination</div>

                    <div class="form-group submit-group row">
                        <div class="col-sm-6">
                            <a tabindex="0" class="btn btn-link" role="button" onclick="return false" data-html="true" data-toggle="popover" data-trigger="focus" title="Did you back the Kickstarter?" data-placement="bottom" data-content="Your login information will be sent to you via email.  Please email <a href='mailto:info@openworm.org'>info@openworm.org</a> with any additional questions">Kickstarter backer?</a>
                            <a href="javascript:void(0);" onclick="window.location.href = '/org.wormsim.frontend/user/reset';" class="btn btn-link">Forgot Password</a>
                        </div>
                        <div class="col-sm-6">
                            <button type="button" class="btn btn-info pull-right btn-lg" id="login-submit" data-loading-text="Submitting...">Log in</button>
                        </div>
                    </div>
                </form>
            </div>

        </div>
    </div>
</div>

<script src="/resources/js/login.js"></script>
