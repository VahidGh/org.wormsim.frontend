<!DOCTYPE html>
<html lang="@lang().code()">
    #set($title = "Wormsim Create User")
    #parse("templates/head.vm")
<body>
<div class="login-container">

    <form action="" method="POST" >
        <div class="form-group ">
            <input type="text" id="firstName" name="firstName" value="" class="form-control input-lg" placeholder="First Name"/>
            <span class="help-block"></span>
        </div>
        <div class="form-group ">

            <input type="text" id="lastName" name="lastName" value="" class="form-control input-lg" placeholder="Last Name"/>

            <span class="help-block"></span>
        </div>
        <div class="form-group ">

            <input type="text" id="email" name="email" value="" class="form-control input-lg" placeholder="Email"/>

            <span class="help-block"></span>
        </div>
        <div class="form-group ">

            <input type="password" id="password" name="password" class="form-control input-lg" placeholder="Password"/>

            <span class="help-block">Password must contain one numeric character and one uppercase character</span>
        </div>
        <div class="form-group ">

            <input type="password" id="repeatPassword" name="repeatPassword" class="form-control input-lg" placeholder="Repeat Password"/>

            <span class="help-block"></span>
        </div>
        <h2>Name your worm:</h2>
        <div class="form-group ">

            <input type="text" id="wormName" name="wormName" value="" class="form-control input-lg" placeholder="Worm Name"/>

            <span class="help-block"></span>
        </div>
        <div class="form-group submit-group row">
            <div class="col-sm-12">
                <button type="submit" class="btn btn-primary btn-lg">Submit</button>
            </div>
        </div>
    </form>
</div>

</body>
</html>
