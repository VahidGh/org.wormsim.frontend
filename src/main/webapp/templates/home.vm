<!DOCTYPE html>
<html lang="en">
#set($title = "Wormsim")
#parse("templates/head.vm")

<body>

    <div class="container">
        <div class="header">

            <h3 class="text-muted">Wormsim</h3>
        </div>

        <div class="jumbotron">
            <h2>Welcome to Wormsim</h2>
            <p class="lead">c. elegans in your browser</p>

            #if($user)
                <p><a href="login" class="btn btn-primary" role="button">You are logged in as $user.getEmail() ! Aww yeah!</a></p>
            #else
                <p><a href="login" class="btn btn-primary" role="button">You are not logged in. go to /login or /signup</a></p>
            #end

            <h2>User management urls:</h2>
            <p>
                /login - login
            </p>
            <p>
                /logout - logout
            </p>
            <p>
                /signup - create account
            </p>
            <p>
                /user/reset - reset password
            </p>
        </div>
    </div>

</body>
</html>